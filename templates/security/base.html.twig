<!DOCTYPE html>
<html lang="fr">
<head>
    <title>L'éco-clic{% if block('title') is defined %} - {{ block('title') }}{% endif %}</title>
    {% include "partials/metas.html.twig" %}
    <link href="http://www.jqueryscript.net/css/jquerysctipttop.css" rel="stylesheet" type="text/css">
    <link rel="stylesheet" href="{{ asset('css/placeholderRGAA.css') }}">
    <link rel="stylesheet" href="{{ asset('css/index.css') }}">
    {% block metas %}{% endblock %}
</head>
<body class="container-fluid" style="padding-left: 0;">
    <div id="contenu" class="row" style="min-height: 100vh;">
        <div id="espace" class="col-lg-5 col-xl-5 d-none d-lg-block">
        </div>
        <div id="userSpace" class="justify-content-between col-lg-7 col-xl-7 row center">
            <div class="col-12 mx-auto" style="margin-top: 90px !important;">
                <div class="row">
                    <div class="col-12">
                        <img src="{{ asset('img/logoEcoclic.png') }}" alt="logo Ecoclic" class="top logo d-block mx-auto">
                        {% block content %}{% endblock %}
                    </div>
                </div>

                {% if app.request.get('_route') != 'security_registration' %}
                <p class="opa80 text-center mt-10 fs" style="margin-bottom: 65px;">
                    Vous n'êtes pas encore inscrit ?
                    <a href="{{ path('security_registration') }}" class="blueAdico sousligne">
                        Créer un compte
                    </a>
                </p>
                {% else %}
                <p class="opa80 text-center mt-10 fs" style="margin-bottom: 65px;">
                    Vous êtes inscrit ?
                    <a href="{{ path('security_login') }}" class="blueAdico sousligne">
                        Connectez-vous
                    </a>
                </p>
                {% endif %}

                <div id="declic">
                    <p>Fièrement propulsé par Déclic</p>
                    <img src="{{ asset('img/LOGO_DECLIC_2018_rvb.jpg') }}" alt="logo Déclic">
                </div>

                <div class="d-flex justify-content-center">
                    <footer class="text-center footer mt-auto py-3 bg-white">
                        <div class="container">
                            <span class="row text-muted">
                                <a href="#" data-toggle="modal" data-target="#mentionModal" class="px-1">Mentions légales</a>
                                <div class="traitVertical "></div>
                                <a href="https://asso-declic.gitbook.io/guide-utilisateur-leco-clic/presentation-generale/leco-clic" class="px-1" target="_blank">Guide utilisateur</a>
                                <div class="traitVertical "></div>
                                <a href="#" data-toggle="modal" data-target="#cguModal" class="px-1">Conditions générales d'utilisation</a>
                            </span>
                        </div>
                    </footer>
                </div>
                {% include 'security/modals.html.twig' %}
            </div>
        </div>
    </div>
{% block footer_scripts %}{% endblock %}
</body>
</html>